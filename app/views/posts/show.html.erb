<h1>WordPress Clone</h1>

<h2>
  Post:
  <%= @post.title %>
</h2>

<small>
  By:
  <%= @post.author %>
</small>

<p>
  Published on:
  <time> <%= @post.publish_date %> </time>
</p>

<img class="post-image" src="<%= @post.image %>">

<p> <%= @post.content %> </p>


<footer>
  Category:
  <%= @post.category %>
</footer>

<a href="/posts">
  Back to list of posts
</a>

<%= link_to("Back to list of posts", "/posts") %>
